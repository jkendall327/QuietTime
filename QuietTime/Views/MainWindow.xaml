<Window x:Class="QuietTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuietTime"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <Label>Maximum volume setter program</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Current volume: </Label>
            <Label Content="{Binding CurrentVolume}"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Max volume:</Label>
            <Label Content="{Binding MaxVolume}"></Label>
        </StackPanel>
        <Slider Maximum="100" MaxWidth="500"  Value="{Binding MaxVolume}"></Slider>

        <StackPanel Orientation="Horizontal">
            <Label>Version:</Label>
            <Label Content="{Binding VersionInfo}"></Label>
        </StackPanel>
        <tb:TaskbarIcon x:Name="myNotifyIcon" Visibility="Visible" ToolTipText="QuietTime"
                       MenuActivation="DoubleClick"/>
    </StackPanel>

</Window>
