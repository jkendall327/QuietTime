<Window x:Class="QuietTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuietTime"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:l="clr-namespace:QuietTime.Other"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <l:BoolToButtonTextConverter x:Key="buttonConverter" />
        <l:BoolToColorConverter x:Key="backgroundConverter"/>
    </Window.Resources>
    
    <Window.Background>
        <LinearGradientBrush
            StartPoint="0.771,0.907"
            EndPoint="0.229,0.093">
            <GradientStop
                Color="#FFFDDDFF"
                Offset="1" />
            <GradientStop
                Color="{Binding IsLocked, Converter={StaticResource ResourceKey=backgroundConverter}}" />
        </LinearGradientBrush>
    </Window.Background>
    
    <StackPanel>
        <Label>Maximum volume setter program</Label>
        
        <StackPanel Orientation="Horizontal">
            <Label>Current volume: </Label>
            <Label Content="{Binding CurrentVolume}"></Label>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label>New max volume:</Label>
            <Label Content="{Binding NewMaxVolume}"></Label>
        </StackPanel>
        <Slider Maximum="100" MaxWidth="500" Value="{Binding NewMaxVolume}"></Slider>
        <StackPanel Orientation="Horizontal">
            <Label>Current max volume:</Label>
            <Label Content="{Binding MaxVolume}"></Label>
        </StackPanel>
        
        <Button Content="{Binding IsLocked, Converter={StaticResource buttonConverter}}" Command="{Binding LockVolume}" Width="100" HorizontalAlignment="Left"></Button>
        
        <StackPanel Orientation="Horizontal">
            <Label>Version:</Label>
            <Label Content="{Binding VersionInfo}"></Label>
        </StackPanel>
        
        <tb:TaskbarIcon x:Name="myNotifyIcon" Visibility="Visible" ToolTipText="QuietTime"
                       MenuActivation="DoubleClick"/>
    </StackPanel>

</Window>
