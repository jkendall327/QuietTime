<Window x:Class="QuietTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuietTime"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:l="clr-namespace:QuietTime.Other"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        <l:BoolToButtonTextConverter x:Key="buttonConverter" />
        <l:BoolToColorConverter x:Key="backgroundConverter"/>
    </Window.Resources>
    
    <Window.Background>
        <LinearGradientBrush
            StartPoint="0.771,0.907"
            EndPoint="0.229,0.093">
            <GradientStop
                Color="#FFFDDDFF"
                Offset="1" />
            <GradientStop
                Color="{Binding IsLocked, Converter={StaticResource ResourceKey=backgroundConverter}}" />
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="2" FontSize="36" FontFamily="Corbel Light">QuietTime</Label>
        
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
            <Label>Current volume: </Label>
            <Label Content="{Binding CurrentVolume}"></Label>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal">
            <Label>New max volume:</Label>
            <Label Content="{Binding NewMaxVolume}"></Label>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Horizontal">
            <Label>Current max volume:</Label>
            <Label Content="{Binding MaxVolume}"></Label>
        </StackPanel>

        <Slider Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" Maximum="100" MaxWidth="500" Value="{Binding NewMaxVolume}"></Slider>

        <Button Grid.Column="2" Grid.Row="3" Content="{Binding IsLocked, Converter={StaticResource buttonConverter}}" Command="{Binding LockVolume}"></Button>

        <Label Grid.Column="3" Grid.Row="4"  Content="{Binding VersionInfo}" HorizontalContentAlignment="Center"></Label>
    </Grid>

</Window>
